<div class="container">
  <h2 class="title">Присоединяйтесь к обсуждениям вопросов!</h2>

  <div class="mt">
    <%= form_with model: @user do |form| %>
      <p class="mt"><%= form.label :real_name, 'Ваше имя' %></p>
      <p><%= form.text_field :real_name, class: 'form-text-field' %></p>

      <p class="mt"><%= form.label :nickname, 'Ник' %></p>
      <p><%= form.text_field :nickname, class: 'form-text-field' %></p>

      <p class="mt"><%= form.label :email, 'Эл. почта' %></p>
      <p><%= form.text_field :email, class: 'form-text-field' %></p>

      <p><%= form.submit 'Зарегистрироваться', class: 'button button-main mt-lg' %></p>
    <% end %>
  </div>
</div>