<h3 class="title-sm"><%= link_to "Вопрос ##{question.id}", question_path(question) %></h3>

<div class="mt-sm mb-sm">
  <%= simple_format h(question.body) %>
</div>

<div class="text-sm question-footer mb-lg">
  <div class="text-grey">
    <%= fa_icon('eye-slash') if question.hidden? %>
    <%= link_to "#{question&.author&.link_name}", '#' %> |
    <%= l(question.created_at, format: :short) %>
  </div>

  <div>
    <% if question.hidden? %>
      <%= button_to fa_icon('eye'), toggle_question_path(question), method: :patch, title: 'Показать вопрос' %>
    <% else %>
      <%= button_to fa_icon('eye-slash'), toggle_question_path(question), method: :patch, title: 'Скрыть вопрос' %>
    <% end %>

    <%= link_to fa_icon('pencil'), edit_question_path(question),
                title: 'Изменить вопрос' %>
    <%= button_to fa_icon('trash-o'), question_path(question),
                  method: :delete, title: 'Удалить вопрос' %>
  </div>
</div>
