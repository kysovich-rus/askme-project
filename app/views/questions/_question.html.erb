<div class="question-header">
   <h3 class="title-sm">
     <%= link_to "Вопрос ##{question.id}", question_path(question) %>
   </h3>
   <p class="text-sm">
     для <%= link_to link_name(question.user), user_path(question.user), class: "text-grey" %>
   </p>
</div>

<div class="mt-sm mb-sm <%= "text-hidden" if question.hidden? %>">
  <%= simple_format h(question.body) %>
</div>

<div class="text-sm question-footer mb-lg">
  <div class="text-grey">
    <%= fa_icon('eye-slash') if question.hidden? %>
    <% if question.author.present? %>
      <%= link_to "#{link_name(question.author)}", user_path(question.author) %>
    <% else %>
      Гость
    <% end %> |
    <%= l(question.created_at, format: :short) %>
  </div>

  <div>
    <% if current_user == question.user %>
      <% if question.hidden? %>
        <%= button_to fa_icon('eye'), toggle_question_path(question), method: :patch, title: 'Показать вопрос' %>
      <% else %>
        <%= button_to fa_icon('eye-slash'), toggle_question_path(question), method: :patch, title: 'Скрыть вопрос' %>
      <% end %>

      <%= link_to fa_icon('pencil'), edit_question_path(id: question.id, user_id: question.user.id),
                  title: 'Изменить вопрос' %>

      <%= button_to fa_icon('trash-o'), question_path(question),
                    method: :delete, title: 'Удалить вопрос',
                    form: {data: {turbo_confirm: "Удалить вопрос №#{question.id}?"} } %>
    <% end %>
  </div>
</div>
