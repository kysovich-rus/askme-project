<div class="container">
  <h2 class="title-lg mb">
    Новые пользователи
  </h2>
  <div class="users-box">
    <% @users.each do |user| %>
      <%= render "users/user_avatar", user: user%>
    <% end %>
  </div>
</div>

<div class="container">
  <% if current_user.nil? %>
    <p class="text-sm mb">
      Здравствуйте, Гость!
      <%= link_to "Зарегистрируйтесь", new_user_path %>
      или
      <%= link_to "войдите", sessions_new_path %>,
      чтобы получать вопросы и отвечать на них.
    </p>
  <% end %>
  <% if @questions.count.zero? %>
    <p class="text-sm">Никто еще не задавал вопросов... <%= link_to "Хотите спросить?", new_question_path %></p>
  <% else %>
    <h2 class="title-lg mb">
      <%= inclination(@questions.count, 'Последний', 'Последние', 'Последние') %>
      <%= @questions.count %>
      <%= inclination(@questions.count, 'вопрос', 'вопроса', 'вопросов') %>
    </h2>
    <%= render @questions %>
  <% end %>
</div>
