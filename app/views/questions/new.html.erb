<div class="container">
  <h2 class="title-lg mb">Создание нового вопроса</h2>

  <% if @question.errors.any? %>
    <div class="mt">
      <% @question.errors.full_messages.each do |message| %>
        <p class="mb-sm text-red"><%= message %></p>
      <% end %>
    </div>
  <% end %>

  <%= form_with model: @question, data: {turbo: false} do |form| %>
    <p><%= form.label :body, 'Текст вопроса' %></p>
    <p><%= form.text_area :body, rows: 5, class: 'form-text-area' %></p>

    <p class="mt"><%= form.label :user_id, 'Получатель' %></p>
    <p><%= form.text_field :user_id, class: 'form-text-field' %></p>

    <p class="mt"><%= form.submit 'Создать', class: 'button button-main' %></p>
  <% end %>
</div>
