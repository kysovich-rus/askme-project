<%= form_with model: question, data: {turbo: false} do |form| %>
  <p><%= form.label :body, 'Текст вопроса' %></p>
  <p><%= form.text_area :body, rows: 5, class: 'form-text-area' %></p>

  <p class="mt"><%= form.label :user_id, 'Получатель' %></p>
  <p><%= form.text_field :user_id, class: 'form-text-field' %></p>

  <%= form.hidden_field :author_id, value: current_user&.id %>

  <p class="mt"><%= form.submit 'Отправить', class: 'button button-main' %></p>
<% end %>
