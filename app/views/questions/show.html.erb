<div class="container">
    <h2 class="title-lg mb"><%= fa_icon('eye-slash') if @question.hidden? %> Вопрос <%= @question.id %></h2>

    <p class="mb-sm"><%= @question.body %></p>
    <p>user_id: <b><%= @question.user_id %></b></p>

    <div class="mt">
      <%= link_to fa_icon('pencil'), edit_question_path(@question), title: 'Изменить вопрос' %>
      <% if @question.hidden? %>
        <%= button_to fa_icon('eye'), toggle_question_path(@question), method: :patch, title: 'Показать вопрос' %>
      <% else %>
        <%= button_to fa_icon('eye-slash'), toggle_question_path(@question), method: :patch, title: 'Скрыть вопрос' %>
      <% end %>
      <%= button_to fa_icon('trash-o'), question_path(@question), method: :delete, title: 'Удалить вопрос' %>
    </div>

    <p class="mt"><%= link_to "Все вопросы", questions_path %></p>
</div>
